{% extends 'templates/base.html.twig' %}

{% block content %}
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>{{title}}</h1>
                </div>           
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-12">
                    <!-- jquery validation -->
                    <div class="card">
                        <div class="card-header">
                            <div class="row justify-content-end ">
                                <a class="btn btn-sm btn-primary" href="{{base_url(baseUrl)}}">Voltar</a>
                            </div>
                        </div>                 
                        <form id="form" method="post" class="form-validate" action="{{base_url(baseUrl)}}/save">
                            <div class="card-body">
                                {# <div class="form-row"> #}
                                    <div class="row g-4">
                                        <div class="col-lg-4">
                                            <div class="form-group">
                                                <label class="form-label">Nome</label>
                                                <input type="text" class="form-control" id="nome" name="nome" value="{{ usuario is defined ? usuario.nome : ''}}" placeholder="Ex: Mario da Silva" autocomplete="off" required>
                                            </div>
                                        </div>
                                        <div class="col-lg-4">
                                            <div class="form-group">
                                                <label class="form-label">E-mail</label>
                                                <input type="text" class="form-control" id="email" name="email" value="{{ usuario is defined ? usuario.email : ''}}" placeholder="Ex: exemplo@exemplo.com" autocomplete="off" required>
                                            </div>
                                        </div>
                                        <div class="col-lg-4">
                                            <div class="form-group">
                                                <label class="form-label">CNPJ</label>
                                                <input type="text" class="form-control" id="cnpj" name="cnpj" placeholder="Ex: 99.999.999/9999-99" autocomplete="off" required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row g-4">
                                        <div class="col-lg-4">
                                            <div class="form-group">
                                                <label class="form-label">Telefone</label>
                                                <input type="text" class="form-control" id="telefone" name="telefone" placeholder="Ex: (99) 9.9999-9999" auntocomplete="off" required>
                                            </div>
                                        </div>                                       
                                        <div class="col-lg-4">
                                            <div class="form-group">
                                                <label class="form-label">CEP</label>
                                                <input type="text" class="form-control" id="cep" name="cep" placeholder="Ex: 99999-999" auntocomplete="off" required>
                                            </div>
                                        </div>                                       
                                        <div class="col-lg-4">
                                            <div class="form-group">
                                                <label class="form-label">Cidade</label>
                                                <input type="text" class="form-control" id="cidade" name="cidade" placeholder="Ex: São Paulo" auntocomplete="off" required>
                                            </div>
                                        </div>                                       
                                    </div>
                                    <div class="row g-4">
                                        <div class="col-lg-4">
                                            <div class="form-group">
                                                <label class="form-label">Bairro</label>
                                                <input type="text" class="form-control" id="bairro" name="bairro" placeholder="Ex: Kennedy" auntocomplete="off" required>
                                            </div>
                                        </div>                                                                            
                                        <div class="col-lg-4">
                                            <div class="form-group">
                                                <label class="form-label">Logradouro</label>
                                                <input type="text" class="form-control" id="logradouro" name="logradouro" placeholder="Ex: Av. São Paulo" auntocomplete="off" required>
                                            </div>
                                        </div>                                       
                                        <div class="col-lg-4">
                                            <div class="form-group">
                                                <label class="form-label">Número</label>
                                                <input type="text" class="form-control" id="logradouro" name="logradouro" placeholder="Ex: 125" auntocomplete="off" required>
                                            </div>
                                        </div>                                       
                                    </div>
                                </div>
                                <div class="card-footer">
                                        <button type="submit" class="btn btn-primary">
                                            Salvar
                                        </button>
                                </div>
                            </div>
                        </form>
                        <!-- /.card -->
                    </div>
                </div>
            </div>
        </div>           
    </section>
{% endblock %}      