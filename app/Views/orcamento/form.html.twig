						                            <input type="hidden" name="id" value="{{ usuario.id }}"/>
					                            {% endif %}
                                                <label class="form-label" for="cnpj">Nome</label>
                                                <input type="text" class="form-control" id="nome" name="nome" value="{{ usuario is defined ? usuario.nome : ''}}" placeholder="Ex: Mario da Silva" autocomplete="off" required>
                                            </div>
                                        </div>
                                        <div class="col-lg-4">
                                            <div class="form-group">
                                                <label class="form-label" for="cnpj">E-mail</label>
                                                <input type="text" class="form-control" id="email" name="email" value="{{ usuario is defined ? usuario.email : ''}}" placeholder="Ex: exemplo@exemplo.com" autocomplete="off" required>
